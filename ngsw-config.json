{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",

  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "ionicons",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "urls": [
          "https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js",
          "https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/svg/**",
          "/*.(png|jpg|jpeg|svg|webp|avif|gif|ico)"
        ]
      }
    }
  ],

  "dataGroups": [
    {
      "name": "api-cache",
      "urls": [
        "https://firestore.googleapis.com/**",
        "https://identitytoolkit.googleapis.com/**"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 100,
        "maxAge": "1h",
        "timeout": "10s"
      }
    },
    {
      "name": "remote-images",
      "urls": [
        "https://firebasestorage.googleapis.com/**"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 60,
        "maxAge": "7d",
        "timeout": "10s"
      }
    }
  ]
}
